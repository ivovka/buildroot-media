config BR2_PACKAGE_OSCAM
        bool "oscam"
        help
          OSCam is an Open Source Conditional Access Module software,
          based on the very good MpCS version 0.9d

          http://www.streamboard.tv/

config BR2_OSCAM_USE_DEFAULT_CONF
        bool "use default oscam configuration"
        depends on BR2_PACKAGE_OSCAM

config BR2_OSCAM_ADDONS
        string "OSCam addons"
        depends on !BR2_OSCAM_USE_DEFAULT_CONF && BR2_PACKAGE_OSCAM
        default "WEBIF TOUCH HAVE_DVBAPI IRDETO_GUESSING CS_ANTICASC WITH_DEBUG MODULE_MONITOR WITH_SSL WITH_LB CS_CACHEEX CW_CYCLE_CHECK LCDSUPPORT LEDSUPPORT IPV6SUPPORT"

config BR2_OSCAM_PROTOCOLS
        string "OSCam protocols"
        depends on !BR2_OSCAM_USE_DEFAULT_CONF && BR2_PACKAGE_OSCAM
        default "MODULE_CAMD33 MODULE_CAMD35 MODULE_CAMD35_TCP MODULE_NEWCAMD MODULE_CCCAM MODULE_CCCSHARE MODULE_GBOX MODULE_RADEGAST MODULE_SERIAL MODULE_CONSTCW MODULE_PANDORA MODULE_GHTTP"

config BR2_OSCAM_READERS
        string "OSCam readers"
        depends on !BR2_OSCAM_USE_DEFAULT_CONF && BR2_PACKAGE_OSCAM
        default "READER_NAGRA READER_IRDETO READER_CONAX READER_CRYPTOWORKS READER_SECA READER_VIACCESS READER_VIDEOGUARD READER_DRE READER_TONGFANG READER_BULCRYPT READER_GRIFFIN READER_DGCRYPT"

config BR2_OSCAM_CARD_READERS
        string "List of OSCam card readers"
        depends on !BR2_OSCAM_USE_DEFAULT_CONF && BR2_PACKAGE_OSCAM
        default "CARDREADER_PHOENIX CARDREADER_INTERNAL CARDREADER_SC8IN1 CARDREADER_MP35 CARDREADER_SMARGO CARDREADER_DB2COM CARDREADER_STAPI CARDREADER_STINGER"
